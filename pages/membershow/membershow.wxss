.container {
  width: 100%;
  min-height: 100vh;
  /* border: 1px solid #000; */
  padding: 0rpx 0rpx 20rpx 5rpx;
}

.topView {
  width: 100%;
  height: 400rpx;
  /* border: 1px solid #000; */
  display: flex;
  flex-direction: row;
}

.topView .imgBox {
  width: 45%;
  height: 400rpx;
  /* border: 1px solid #000; */
  display: flex;
  align-items: center;
  justify-content: center;
}

.topView .memBasicBox {
  width: 55%;
  height: 330rpx;
  /* border: 1px solid #000; */
  padding: 40rpx 5rpx 10rpx 20rpx;
}

.topView .memBasicBox .basicBox {
  width: 100%;
  height: 230rpx;
  border: 1px solid white;
  font-size: 28rpx;
}

.topView .memBasicBox .basicBox view {
  margin-top: 6rpx;
}

.topView .memBasicBox .basicBox view:nth-child(1) {
  margin-top: 18rpx;
}

.introBox {
  width: 100%;
  min-height: 200rpx;
  /* border: 1px solid #000; */
}

.experBox {
  width: 100%;
  min-height: 200rpx;
  /* border: 1px solid #000; */
}

.socialBox {
  width: 100%;
  min-height: 200rpx;
  /* border: 1px solid #000; */
}

.socialBox .socialItem {
  width: 100%;
  height: 60rpx;
  /* border: 1px solid #000; */
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0rpx 10rpx;
  margin-top: 10rpx;
}

.socialItem image {
  width: 50rpx;
  height: 50rpx;
}

.socialItem text {
  font-size: 25rpx;
  margin-left: 20rpx;
}

.title{
  height: 30rpx;
  font-size: 30rpx;
  border-left-width: 5px;
  border-left-style: solid;
  border-left-color: red;
  padding: 5px 5px 5px 10px;
  margin-top: 10rpx;
}

.content {
  padding: 20rpx;
  font-size: 28rpx;
}

