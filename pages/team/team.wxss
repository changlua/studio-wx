.container{
  width: 100%;
  height: 100%;
  /* border: 1px solid #000; */
}

.container .toptitle {
  width: 100%;
  height: 100rpx;
  /* border: 1px solid #000; */
  text-align: center;
  justify-content: center;
  font-family: "隶书"
}

.container .toptitle text{
  width: 100rpx;
  position: relative;
  top: 11rpx;
  font-size: 54rpx;
}

.container .members-container .title {
  height: 40rpx;
  border-left-width: 5px;
  border-left-style: solid;
  border-left-color: red;
  padding: 5px 5px 5px 10px;
  /* margin-bottom: 10px; */
  margin-top: 30rpx;
}

.container .members-container:nth-child(1)  {
  margin-top: 20rpx;
}

.container .members-container .membersbox {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  /* justify-content: center; */
  align-items: center;
  /* 子元素保持设置的宽度并且换行 */
  flex-flow: row wrap;
  /* gap: 20px 20px; */
}

.container .members-container .membersbox .member {
  margin-top: 30rpx;
  margin-left: 20rpx;
  width: 320rpx;
  height: 300rpx;
  /* border: 1px solid #000; */
  padding: 10rpx;
  border: 2rpx solid rgb(204, 216, 224);
  box-shadow: 0px 0px 10rpx #18d26e;
  border-radius: 5%;
  margin-bottom: 20rpx;
}

/* .container .members-container .membersbox .member:hover {
  box-shadow: 0px 0px 10px #18d26e;
  border: 2px solid rgb(204, 216, 224);
} */

.container .members-container .membersbox .member .imginfobox {
  width: 320rpx;
  height: 200rpx;
  display: flex;
  flex-direction: row;
}

.container .members-container .membersbox .member .imginfobox .imgbox {
  width: 160rpx;
  height: 200rpx;
}

.container .members-container .membersbox .member .imginfobox .imgbox image{
  width: 160rpx;
  height: 200rpx;
}

.container .members-container .membersbox .member .imginfobox .descbox{
  width: 200rpx;
  height: 200rpx;
  /* border: 1px solid #000; */
  display: flex;
  flex-direction: column;
  font-size: 16rpx;
}

.container .members-container .membersbox .member .imginfobox .descbox view:nth-child(1) {
  font-weight: bold;
  color: rgba(36, 33, 33, 0.89);
}

.container .members-container .membersbox .member .imginfobox .descbox view{
  margin-top: 10rpx;
  margin-left: 10rpx;
}

.container .members-container .membersbox .member .introbox {
  margin-top: 12rpx;
  margin-left: 4rpx;
  font-size: 16rpx;
  /* transform: scale(0.83); */
}

/* 第三部分：导航 */
.container .navigatorbox {
  width: 120rpx;
  height: 140rpx;
  /* border: 1px solid #000; */
  display: flex;
  flex-direction: column;
  position: fixed;
  right: 0;
  top: 400rpx;
  z-index: 999;
  align-content: center;
  justify-content: center;
  /* border: 2rpx solid rgb(204, 216, 224); */
  box-shadow: 0px 0px 10rpx #18d26e;
  /* border-radius: 30rpx; */
  font-size: 28rpx;
  color: rgba(240, 14, 6, 0.911);
  background-color: #18d26f71;
  border-top-left-radius: 15rpx;
  border-bottom-left-radius: 15rpx;
}

.container .navigatorbox view{
  text-align: center;
  /* border: 1px solid rgb(224, 10, 10); */
  background-color: #18d26f9d;
  /* border-radius: 10px; */
}

.container .navigatorbox view:nth-child(1) {
  border-top-left-radius: 15rpx;
  /* border-top-right-radius: 1s5rpx; */
  /* border-radius: 15px 0px 0px 0px; */
}

.container .navigatorbox view:last-child{
  border-bottom-left-radius: 15rpx;
  /* border-bottom-right-radius: 15rpx; */
}