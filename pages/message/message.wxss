.container {
  width: 100%;
  min-height: 100vh;
  /* border: 1px solid #000; */
}

.topBox {
  width: 100vw;
  height: 150rpx;
  padding: 20rpx 10vw;
}

.topBox .funcsBox {
  width: 80vw;
  height: 140rpx;
  border: 1px solid rgba(0, 0, 0, 0.068);
  border-radius: 10px;
  display: flex;
  flex-direction: row;
}

.topBox .funcsBox .funcBox {
  width: 200rpx;
  height: 130rpx;
  /* border: 1px solid #000; */
  display: flex;
  flex-direction: column;
  padding-top: 20rpx;
}

.topBox .funcsBox .funcBox image {
  width: 60rpx;
  height: 60rpx;
  margin: 0px auto;
}

.topBox .funcsBox .funcBox view {
  margin: 0px auto;
}

.msgsBox {
  width: 100%;
  min-height: 800rpx;
  /* border: 1px solid #000; */
}

.msgsBox .item {
  width: 100%;
  height: 120rpx;
  padding: 10rpx;
  /* border: 1px solid #000; */
  display: flex;
  flex-direction: row;
  align-content: center;
  justify-items: center;
}

.msgsBox .item .leftBox {
  width: 20vw;
  height: 120rpx;
  /* border: 1px solid #000; */
  display: flex;
  flex-direction: row;
  align-content: center;
  justify-items: center;
}

.msgsBox .item .leftBox image  {
  width: 100rpx;
  height: 100rpx;
  margin: auto auto;
}

.msgsBox .item .rightBox {
  width: 70vw;
  height: 120rpx;
  /* border: 1px solid #000; */
  display: flex;
  flex-direction: column;
  align-content: center;
  justify-items: center;
  padding: 0rpx 2vw 0rpx 2vw;
  position: relative;
}

.msgsBox .item .rightBox view:nth-child(1) {
  font-weight: bold;
  font-size: 28rpx;
  margin-top: 15rpx;
}

.msgsBox .item .rightBox view:nth-child(2) {
  position: absolute;
  right: 0rpx;
  font-size: 24rpx;
  color: grey;
  margin-top: 15rpx;
}

.msgsBox .item .rightBox view:nth-child(3) {
  margin-top: 5rpx;
  font-size: 25rpx;
  margin-top: 15rpx;
  white-space: nowrap; /* 禁止文本换行 */
  overflow: hidden; /* 溢出部分隐藏 */
  text-overflow: ellipsis;/* 溢出部分显示为省略号 */
  color: rgba(128, 128, 128, 0.788);
}