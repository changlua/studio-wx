.init-pageView{
  width: 100%;
  height: 100vh;
  background-color: darkgrey;
  display: flex;
  justify-content: center;
  align-items: center;
}
.init-pageView .out{
  width: 100%;
  height: 100%;
  /* margin: 30px; */
  /* margin-top: 10px; */
}
.init-pageView .in{
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.init-pageView .in swiper-item view{
  position: absolute;
  top: 0;
  width: 100%;
  height: 100vh;
  /* border: 1px solid #000; */
  background-color: #fff;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center center;
  /* z-index: -1; */
}

