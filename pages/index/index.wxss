/* 第二个栏目 */
.pageView {
  width: 100%;
  height: 100%;
  /* background-color: aquamarine; */
}


.pageView .page{
  width: 100%;
  height: 200px;
  display: flex;
  /* position: fixed;
  top: 0;
  left: 0;
  z-index: 999; */
}

.pageView .box1{
  /* width: 100%;
  height: 100%;  */
}
.pageView .box2{
  width: 100%;
  height: 200px; 
}
.pageView .box2 image {
  height: 200px;
  width: 100%;
}

.pageView .carousel-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: absolute;
  bottom: 0;
  top: 0;
  left: 0;
  right: 0;
  z-index: 999;
  color: white;
  font-weight: bold;
}

.pageView .carousel-container text:nth-child(1) {
  font-size: 20px;
}

.pageView .carousel-container text:nth-child(2) {
  margin-top: 10px;
  font-size: 8px;
}

.pageView .content2 {
  padding: 15px 0px;
  /* border: 1px solid #000; */
  text-align: center;
  justify-content: center;
}

.pageView .content2 view::after{
  content: '';
  position: absolute;
  display: block;
  width: 40px;
  height: 1px;
  background: #18d26e;
  bottom: 290px;
  left: calc(50% - 20px);
}

.pageView .content2 .box{
  width: 100%;
  height: 80px;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
  /* 网格行与列之间的间隙 */
  gap: 20px 10px;
  margin-top: 10px;
}

.pageView .content2 .infobox {
  width: 75px;
  height: 75px;
  /* border: 1px solid #000; */
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  /* border-color: rgba(139, 112, 61, 0.815); */
  border: 1px solid rgba(0,0,0,.05);
  box-shadow: 4px 4px 40px rgb(0 0 0 / 5%);
  border-radius: 15px;
}

.pageView .content2 .infobox view:nth-child(1) {
  font-size: 25px;
  color:  #18d26e;

}

.pageView .content2 .infobox view:nth-child(2) {
  font-size: 12px;
  font-weight: 200px;
}

